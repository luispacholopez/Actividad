<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<LinearLayout 
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
    
	 	<EditText 	    
	 	    android:layout_gravity="center"
	 	    android:id="@+id/nameAct"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/nombreNuevaActividad"/>
 	
	 	<EditText
	 	    android:layout_gravity="center"
	 	    android:id="@+id/descAct"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:hint="@string/descripcionNuevaActividad"
	        android:inputType="textMultiLine"/>
	    
 		<Button
 		    android:layout_gravity="center"
 		    android:textColor="@color/gris"
 		    android:background="@color/azul"
	 	    android:id="@+id/bImagen"
	 	    android:text="@string/bagregarImg"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:onClick="addimagen"/>
 		
 		<TextView
 		    android:layout_gravity="center"
 		    android:text=""
 		    android:id="@+id/texImagen"	 	    
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"/>
 		    
 		<Button
 		    android:layout_gravity="center"
 		    android:textColor="@color/gris"
 		    android:background="@color/azul"
	 	    android:id="@+id/bVideo"
	 	    android:text="@string/bagregarVid"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:onClick="addvideo"/>
 		
 		<TextView
 		    android:layout_gravity="center"
 		    android:text=""
 		    android:id="@+id/texVideo"	 	    
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"/> 	    
 		    
 		<Button
 		    android:layout_gravity="center"
 		    android:textColor="@color/gris"
 		    android:background="@color/azul"
	 	    android:id="@+id/bAudio"
	 	    android:text="@string/bagregarAud"
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"
	 	    android:onClick="addaudio"/>
 		
 		<TextView
 		    android:layout_gravity="center"
 		    android:text=""
 		    android:id="@+id/texAudio"	 	    
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"/>
 		
	 	<TextView
 		    android:text="" 		    
	 	    android:layout_width="wrap_content"
	 	    android:layout_height="wrap_content"/>
	 	
 		<Button 
	 	    android:layout_gravity="center"
	 	    android:textColor="@color/gris"
	 	    android:background="@color/azul"
	 	    android:id="@+id/Agregar"
	 	    android:text="Agregar Actividad"
	 	    android:onClick="agregar"
	 	    android:layout_width="match_parent" 
			android:layout_height="wrap_content"/>
 		
</LinearLayout>
</ScrollView>